/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  justify-content: space-between;
} 
/*组件间隔*/
.gap {
  margin-top: 3px;   
  width: 100%;  
  height: 5rpx;  
  background: #EEEEEE;  
}
/*带图片的菜单栏*/
.showMenu {
  width: 100%;
  margin: 15rpx 0;
  height: 150rpx;
  }
.showMenu:after{  
  content: "";  
  display: block;  
  clear: both;  
}  
.menuList{  
  float: left;  
  width: 25%;  
  box-sizing: border-box;  
  padding-bottom: 10px;  
}  
.menuImg {  
  width: 120rpx;  
  height: 120rpx;  
  display: block;  
  margin: 0 auto;  
  margin-bottom: 5px;  
} 
.menuDesc{  
  color: #333333;  
  width: 100%;  
  text-align: center;
  display: block;  
  font-size: 25rpx; 
}  
/*表单格式*/
.inputArea {
  display: flex;
  flex-direction: column;
  margin: 8px;
  padding: 40rpx;
}
.submit
{
  padding: 20rpx;
}
.label
{
  margin-top: 15px;
  margin-left: 20px;
}
.border {
  border-bottom: 2px solid #808080;
}
.border-all {
  border: 2px solid #808080;
}
.picker {
  padding: 10px;
  margin: 8px;
  border: 2px solid #FFFFFF;
  border-radius: 5px;
  box-shadow: 4px 1px 1px #cccccc;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color:#F6F6F6;
}


