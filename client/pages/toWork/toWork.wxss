/**toWork.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}
.memberMenu {
  position: fixed;
  z-index: 1;
}
.memberMenuImage {
  border: 0 solid #ffffff;
  border-radius: 500px;
  box-shadow: 4px 2px 2px #cccccc;
  width: 150rpx;
  height: 150rpx
}
.memberMenuDesc {
  font-size: 16px;
  margin: 3px;

}
.showFunction {
  width: 100%;
  height: auto;
  }
.showFunction:after{  
  content: "";  
  display: block;  
  clear: both;  
}  
.functionList{  
  float: left;  
  width: 50%;  
  box-sizing: border-box;  
}  
.functionDesc {
  padding: 10px;
  margin: 8px;
  border: 2px solid #FFFFFF;
  border-radius: 5px;
  box-shadow: 4px 1px 1px #cccccc;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color:#F6F6F6;
}
