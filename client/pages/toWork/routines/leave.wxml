<!--client/pages/toWork/routines/leave.wxml-->


<wux-tabs theme="positive" controlled current="{{ key }}" bindchange="onTabsChange">
  <block wx:for="{{ tabs }}" wx:key="key">
      <wux-tab key="{{ item.key }}" title="{{ item.title }}"></wux-tab>
  </block>
</wux-tabs>

<swiper current="{{ index }}" bindchange="onSwiperChange" class="contentSwiper">
  <swiper-item>
    <view>{{ tabs[0].content }}</view>
  </swiper-item>
  <swiper-item>
    <view>{{ tabs[1].content }}</view>
  </swiper-item>
</swiper>
